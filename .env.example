# Whatsaly Environment Configuration
# Copy this to .env and update values for your environment

# Server port
PORT=8080

# Database connection
DATABASE_URL=../database.db

# Enable logging
LOGS=true

# Admin portal password (change this!)
ADMIN_PASSWORD=your_admin_password_here

# JWT secret for token signing (MUST be changed in production!)
# Generate with: openssl rand -hex 32
JWT_SECRET=change_me_to_random_string

# API secret key for response signing (MUST be changed in production!)
# Generate with: openssl rand -hex 32  
API_SECRET_KEY=change_me_to_random_string

# WebAuthn relying party settings
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Whatsaly

# Security options (optional)
# STRICT_ORIGIN_CHECK=true
# REQUIRE_API_KEY=true
# PRODUCTION=true

# Allowed origins (comma-separated, for CORS and origin validation)
# ALLOWED_ORIGINS=http://localhost,http://127.0.0.1
