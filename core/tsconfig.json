{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./out",
    "skipDefaultLibCheck": true,
    "rewriteRelativeImportExtensions": true
  },
  "exclude": ["node_modules"]
}
