{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "."
  },
  "include": ["src/**/*", "**/*"],
  "exclude": ["node_modules"]
}
